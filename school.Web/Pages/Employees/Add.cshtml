@page "/employees/add"
@model AddModel
@{
    ViewData["Title"] = "Add employee";
}

@section styles
{
    <link rel="stylesheet" href="~/css/add.css" />
}

<div class="wrapper">
    <form method="post" class="form">
        <table>
            <tr>
                <td>
                    <label for="firstName">
                        First name
                    </label>
                </td>
                <td>
                    <input class="static" type="text" maxlength="30" required name="firstName" id="firstName"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="lastName">
                        Last Name
                    </label>
                </td>
                <td>
                    <input type="text" maxlength="30" required name="lastName" id="lastName"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="age">
                        Age
                    </label>
                </td>
                <td>
                    <input type="number" required name="age" min="18" max="65" id="age"/>
                </td>
            </tr>
            <tr>
                <td>Type</td>
                <td>
                    @foreach(var position in Model.PositionsDto)
                    {
                        <input type="checkbox" name="positionsId" value="@position.Id" class="btn-check" id="@position.Id">
                        <label for="@position.Id" class="btn btn-outline-secondary">
                            @position.Name
                        </label>
                    }
                </td>
            </tr>
        </table>
        <div class="error">@Model.ErrorMessage</div>
        <div class="btns">
            <button type="submit" class="btn btn-save btn-lg">Add employee</button>
            <a asp-page="List" class="btn btn-cancel btn-lg">Cancel</a>
        </div>
    </form>
</div>