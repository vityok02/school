@page "/employees/{id}/edit"
@model EditModel

@section styles
    {
    <link rel="stylesheet" href="~/css/edit.css" />
}

<partial name="Sidebar" />

<div class="wrapper">
    <form method="post" class="edit">
        <table>
            <tr>
                <td>Name: </td>
                <td>
                    <input type="text" value="@Model.Employee!.FirstName" name="firstName" />
                </td>
            </tr>
            <tr>
                <td>Surname: </td>
                <td>
                    <input value="@Model.Employee.LastName" name="lastName"/>
                </td>
            </tr>
            <tr>
                <td>Age: </td>
                <td>
                    <input type="number" value="@Model.Employee.Age" min="18" max="65" name="age"/>
                </td>
            </tr>
        </table>
        <div class="error">@Model.ErrorMessage</div>
        <input type="hidden" asp-for="Employee!.Id" />
        <div class="btns">
            <input class="button save" type="submit" value="Save" />
            <div class="button cancel">
                <a asp-page="List">Cancel</a>
            </div>
        </div>
    </form>
</div>