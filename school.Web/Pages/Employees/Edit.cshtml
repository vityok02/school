@page "/employees/{id}/edit"
@model EditModel

@section styles
    {
    <link rel="stylesheet" href="~/css/edit.css" />
}

<partial name="Sidebar" />

<div class="wrapper">
    <form method="post" class="edit">
        <table>
            <tr>
                <td>
                    <label for="firstName">First name</label>   
                </td>
                <td>
                    <input type="text" name="firstName" id="firstName" value="@Model.Employee!.FirstName" maxlength="50" required/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="lastName">Last name</label>    
                </td>
                <td>
                    <input type="text" name="lastName" id="lastName" value="@Model.Employee.LastName" maxlength="50" required/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="age">Age</label>
                </td>
                <td>
                    <input type="number" name="age" id="age" value="@Model.Employee.Age" min="18" max="65" required/>
                </td>
            </tr>
            <tr>
                <td>Position: </td>
                <td>
                    @foreach (var position in Model.Positions)
                    {
                        if (Model.Employee!.Positions.Any(p => p.Id == position.Id))
                        {
                            <input type="checkbox" name="positions" id="@position.Id" value="@position.Id" class="btn-check" checked/>
                        }
                        else
                        {
                            <input type="checkbox" name="positions" id="@position.Id" value="@position.Id" class="btn-check"/>
                        }
                        <label for="@position.Id" class="btn btn-outline-secondary">
                            @position.Name
                        </label>
                    }
                </td>
            </tr>
        </table>
        <div class="error">@Model.ErrorMessage</div>
        <input type="hidden" asp-for="Employee!.Id" />
        <div class="btns">
            <input class="btn btn-save btn-lg" type="submit" value="Save" />
            <a class="btn btn-cancel btn-lg" asp-page="List">Cancel</a>
        </div>
    </form>
</div>