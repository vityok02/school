@model BasePageModel

@if(!await Model.HasSelectedSchoolAsync())
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        School not selected. Please select a school
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="header">
    <details class="dropdown">
        <summary class="name btn btn-secondary dropdown-toggle">@Model.SelectedSchoolName</summary>
        <div class="dropdown-menu show">
            @foreach (var school in Model.Schools)
            {
                <div class="item">
                    <a class="dropdown-item" asp-route-id="@school.Id" asp-page="/Schools/List" asp-page-handler="SelectSchool">@school.Name</a>
                </div>
            }
        </div>
    </details>
    <details class="drop-down">
        <summary>
            <div class="avatar"></div>
        </summary>
        <div class="content">user</div>
    </details>
</div>