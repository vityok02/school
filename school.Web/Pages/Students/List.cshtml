@page "/students"
@model ListModel
@{
    ViewData["Title"] = "Students";
}

<link rel="stylesheet" href="~/css/list.css" />

<partial name="Sidebar" />

<div class="wrapper">
    <form method="get" asp-page="List" asp-all-route-data="Model.FilterParams">
        <div class="filter">
            <label>Name: </label>
            <input asp-for="FilterByName" />
            <label>Age: </label>
            <input asp-for="FilterByAge"/>
            <label>Group: </label>
            <input class="group" asp-for="FilterByGroup" />
            <input type="hidden" asp-for="OrderBy" />
            <input class="search" type="submit" value="Search" />
            <div class="back">
                <a asp-page="/Students/List">Back to full list</a>
            </div>
            <div class="add"><a asp-page="Add">Add</a></div>
        </div>
    </form>
    @if (!Model.Students!.Any())
    {
        <div class="empty">@Model.Message</div>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>
                        <a asp-all-route-data="Model.FirstNameParams">
                            First name
                        </a>
                    </th>
                    <th>
                        <a asp-all-route-data="Model.LastNameParams">
                            Last name
                        </a>
                    </th>
                    <th>
                        <a asp-all-route-data="Model.AgeParams">
                            Age
                        </a>
                    </th>
                    <th class="group-column">
                        <a asp-all-route-data="Model.GroupParams">
                            Group
                        </a>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.Students!)
                {
                    <tr>
                        <td class="first-columns">@student.FirstName</td>
                        <td class="first-columns">@student.LastName</td>
                        <td class="age-column">@student.Age</td>
                        <td class="group-column">@student.Group</td>
                        <td>
                            <div class="btns">
                                <div class="details">
                                    <a href="students/@student.Id/edit">Edit</a>
                                </div>
                                <form class="delete" asp-page-handler="Delete" method="post" asp-route-id="@student.Id"
                              onclick="return confirm('Are you sure you want to delete student @student.FirstName @student.LastName?')">
                                    <input type="submit" value="Delete" />
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>