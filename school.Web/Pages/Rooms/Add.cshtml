@page "add"
@model             RoomFormModel
@using SchoolManagement.Models;
@{
}

<form method="post">
    <table align="center">
        <tr>
            <td>
                Room number
            </td>
            <td>
                <input type="number" name="roomNumber" /><br />
            </td>
        </tr>
        <tr>
            <td>
                Floor
            </td>
            <td>
                <select name="floorNumber">
                    @foreach(var floor in RoomFormModel.Floors)
                    {
                        <option value="@floor.Number">@floor.Number</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td>
                Room type
            </td>
            <td>
                <details>
                    @foreach (var type in RoomTypeExt.RoomTypes)
                    {
                        <input type="checkbox" name="roomType" value="@type.Key"/>@type.Value<br />
                    }
                </details>
            </td>
        </tr>
    </table>
    <div class="error" align="center">@Model.Message</div>
    <div align="center">
        <input type="submit" value="Submit" />
        <input type="reset" value="Reset" />
    </div>
</form>
