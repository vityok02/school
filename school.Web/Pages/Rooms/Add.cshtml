@page "add"
@model             RoomFormModel
@using SchoolManagement.Models;
@{
}

<form method="post">
    <table align="center">
        <tr>
            <td>
                Floor number
            </td>
            <td>
                <input type="number" name="floorNumber" />
            </td>
        </tr>
        <tr>
            <td>
                Room number
            </td>
            <td>
                <input type="number" name="roomNumber" /><br />
            </td>
        </tr>
        <tr>
            <td>
                Room type
            </td>
            <td>
                @foreach (var roomType in RoomTypeExt.RoomTypes)
                {
                    <input type="checkbox" name="roomType"/>@roomType.Value<br />
                }
            </td>
        </tr>
    </table>
    <div class="error" align="center">@Model.Message</div>
    <div align="center">
        <input type="submit" value="Submit" />
        <input type="reset" value="Reset" />
    </div>
</form>
