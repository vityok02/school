@page "/schools/{id}/edit"
@model EditModel

<link rel="stylesheet" href="~/css/edit.css"/>

<partial name="Sidebar" />

<div class="wrapper">
    <form method="post" class="edit">
        <table class="tab">
            <tr>
                <td>Name: </td>
                <td><input asp-for="School!.Name" /></td>
            </tr>
            <tr>
                <td>Country: </td>
                <td><input asp-for="Address!.Country" /></td>
            </tr>
            <tr>
                <td>City/town: </td>
                <td><input asp-for="Address!.City" /></td>
            </tr>
            <tr>
                <td>Street: </td>
                <td><input asp-for="Address!.Street" /></td>
            </tr>
            <tr>
                <td>Postal code: </td>
                <td><input asp-for="Address!.PostalCode" /></td>
            </tr>
            <tr>
                <td>Opening date: </td>
                <td><input type="date" value="@Model.School!.OpeningDate.ToShortDateString()" asp-for="School!.OpeningDate" /></td>
            </tr>
        </table>
        <div>@Model.ErrorMessage</div>
        <input type="hidden" asp-for="Address!.Id" />
        <input type="hidden" asp-for="School!.Id" />
        <div class="btns">
            <input class="button save" type="submit" value="Save" />
            <div class="button cancel">
                <a asp-route-id="@Model.School!.Id" asp-page="Details">Cancel</a>
            </div>
            <div class="error">@Model.Message</div>
        </div>
    </form>
</div>