@page "/schools"
@model SchoolListModel
@{
    if (Model.IsError)
    {
        <script>alert('No school selected, please select a school');</script>
    }
    if (!Model.IsFirst)
    {
        <partial name="Sidebar" />
    }
}

<link rel="stylesheet" href="~/css/list.css" />

<div class="wrapper">
    @if (!Model.Schools.Any())
    {
        <div class="empty">List of schools if empty</div>
    }
    else
    {
        <table id="tab">
            <thead>
                <tr>
                    <th>
                        <a asp-route-orderBy="name">Name</a>
                    </th>
                    <th>
                        <a asp-route-orderBy="city">City</a>
                    </th>
                    <th colspan="2">
                        <a asp-route-orderBy="street">Street</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var school in Model.Schools)
                {
                    <tr>
                        <td>@school.Name</td>
                        <td>
                            <div class="city">
                                @Model.Addresses.Where(a => a.Id == school.AddressId).SingleOrDefault()!.City
                            </div>
                        </td>
                        <td>
                            <div class="street">
                                @Model.Addresses.Where(a => a.Id == school.AddressId).SingleOrDefault()!.Street
                            </div>
                        </td>

                        @if (Model.IsFirst)
                        {
                            <td>
                                <div class="choose">
                                    <a asp-page="/Schools/List">Choose</a>
                                </div>
                            </td>
                        }
                        else
                        {
                            <td>
                                <div class="btns">
                                    <div class="button details">
                                        <a asp-page="Details" asp-route-id="@school.Id">Details</a>
                                    </div>
                                    <form class="button delete" asp-page-handler="Delete" method="post" asp-route-id="@school.Id"
                                    onclick="return confirm('Are you sure you want to delete school @school.Name?')">
                                        <input type="submit" value="Delete" />
                                    </form>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (!Model.IsFirst)
    {
        <div class="add"><a asp-page="Add">Add</a></div>
    }
</div>