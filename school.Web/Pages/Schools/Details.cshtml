@page "/schools/{id}"
@model SchoolModel

@section styles
{
    <link rel="stylesheet" href="~/css/details.css" />
    <link rel="styleshee t" href="~/css/edit.css" />
}

<div class="wrapper">
    <div class="details">
        <table class="tab"> 
            <tr>
                <td>Name: </td>
                <td>@Model.School.Name</td>
            </tr>
            <tr>
                <td>Country: </td>
                <td>@Model.School.Country</td>
            </tr>
            <tr>
                <td>City/town: </td>
                <td>@Model.School.City</td>
            </tr>
            <tr>
                <td>Street: </td>
                <td>@Model.School.Street</td>
            </tr>
            <tr>
                <td>Postal code: </td>
                <td>@Model.School.PostalCode</td>
            </tr>
            <tr>
                <td>Opening date: </td>
                <td>@Model.School.OpeningDate</td>
            </tr>
        </table>
        <div class="btns">
            <a asp-page="Edit" asp-route-id="@Model.School.Id" class="btn btn-edit">Edit</a>
            <a asp-page="List" class="btn btn-cancel">Cancel</a>
        </div>
    </div>
</div>