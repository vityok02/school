@page "/schools/{id}"
@model SchoolModel

<partial name="Sidebar" />

<table> 
    <tr>
        <td>Name</td>
        <td>@Model.School!.Name</td>
    </tr>
    <tr>
        <td>Country</td>
        <td>@Model.Address!.Country</td>
    </tr>
    <tr>
        <td>City/town</td>
        <td>@Model.Address.City</td>
    </tr>
    <tr>
        <td>Street</td>
        <td>@Model.Address.Street</td>
    </tr>
    <tr>
        <td>Postal code</td>
        <td>@Model.Address.PostalCode</td>
    </tr>
    <tr>
        <td>Opening date</td>
        <td>@Model.School.OpeningDate.ToShortDateString()</td>
    </tr>
</table>
<div><a asp-page="Edit" asp-route-id="@Model.School.Id">Edit</a></div>