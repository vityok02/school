@page "/schools/add"
@model SchoolFormModel

<link rel="stylesheet" href="~/css/add.css"/>

<partial name="Sidebar" />

<div class="wrapper">
    <form method="post" class="add">
        <table class="tab">
            <tr>
                <td>Name:</td>
                <td><input type="text" name="name" required oninput="validateName(this)"/></td>
            </tr>
            <tr>
                <td>Country:</td>
                <td><input type="text" name="country" required /></td>
            </tr>
            <tr>
                <td>City/town:</td>
                <td><input type="text" name="city" required /></td>
            </tr>
            <tr>
                <td>Street:</td>
                <td><input type="text" name="street" required /></td>
            </tr>
            <tr>
                <td>Postal code:</td>
                <td><input type="number" name="postalCode" required /></td>
            </tr>
            <tr>
                <td>Opening date:</td>
                <td><input type="date" name="openingDate" required /></td>
            </tr>
        </table>
        <div class="error">@Model.ErrorMessage</div>

        <input class="btn-add" type="submit" value="Add school" />
    </form>
</div>
