@page
@model SchoolFormModel
@{
}

<form method="post">
    <table align="center">
        <tr>
            <td>Name:</td>
            <td><input type="text" name="name" required /></td>
        </tr>
        <tr>
            <td>Country:</td>
            <td><input type="text" name="country" required /></td>
        </tr>
        <tr>
            <td>City/town:</td>
            <td><input type="text" name="city" required /></td>
        </tr>
        <tr>
            <td>Street:</td>
            <td><input type="text" name="street" required /></td>
        </tr>
        <tr>
            <td>Postal code:</td>
            <td><input type="number" name="postalCode" required /></td>
        </tr>
        <tr>
            <td>Opening date:</td>
            <td><input type="date" name="openingDate" required /></td>
        </tr>
    </table>
    <div align="center">
        <input type="submit" value="Submit" />
        <input type="reset" value="Reset" />
    </div>
</form>